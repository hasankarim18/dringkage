<section>
    <div class="container">
        <h3 class="title_h3">{{ section.settings.section_title }}</h3>
        <div class="row">
          {% for block in section.blocks %}
            {% case block.type %}
              {% when 'image_with_title' %}
                <div class="col_3 col_6_m image_box_sec">
                  <!-- <div class="image_box_sec"> -->
                  <img width="" height="" class="box_image" src="Image/imagebox1.png" alt="imagebox1">
                  <h4 class="image_box_text">
                    {{ block.settings.image_title }}
                  </h4>
                  <!-- </div> -->
              </div>
              {% else %}
                <div></div>
            {% endcase %}
          {% endfor %}          

        </div>
    </div>
</section>

